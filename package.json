    "@iobroker/testing": "^3.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.16.0",
    "mocha": "^10.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "~4.7.4"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
